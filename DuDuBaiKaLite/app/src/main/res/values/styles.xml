<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.TranslucentStatus" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Toolbar.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <!-- title -->
    <style name="TitleTheme">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/global_txt_black4</item>
    </style>

    <style name="ActivityTitleTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/global_txt_black4</item>
    </style>


    <style name="DeepUnderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/global_line_bg</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_bg_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- title返回文字样式-->
    <style name="title_back_style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:drawableLeft">@drawable/ic_arraw_left</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:text">返回</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/global_txt_black4</item>
    </style>

    <!-- title文字样式-->
    <style name="title_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/global_txt_black4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <declare-styleable name="AutoRatioImageView">
        <!-- -ratio 高/宽 -->
        <attr name="ratio" format="float" />
        <attr name="prefer" format="integer" />
    </declare-styleable>

    <style name="ErrorDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 分割线样式-->
    <style name="split_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/main_item_bottom_line_color</item>
    </style>
    <!-- 认证中心文字样式 (key)-->
    <style name="auth_center_txt_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/global_txt_black2</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>
