<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/week_day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/me_bg_line_color" />



        <TextView
            android:id="@+id/week_day_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/setting"
            android:text="今7日待还"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/me_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/week_day_money"
            android:text="1000"
            android:textColor="@color/edit_text_hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/me_retract" />

    </RelativeLayout>
</LinearLayout>