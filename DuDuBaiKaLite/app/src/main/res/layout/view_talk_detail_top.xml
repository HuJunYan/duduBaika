<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/detail_iv"
                android:layout_centerVertical="true"
                android:src="@drawable/money_da"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

            <TextView
                android:layout_toRightOf="@id/detail_iv"
                android:id="@+id/tv_phone"
                android:text="1777777"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/home_zx_text"
                android:layout_width="wrap_content"
                android:textColorLink="@color/blue"
                android:textIsSelectable="true"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/right_icon"
                android:src="@drawable/yellow_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    <!--android:autoLink="all"-->
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/item_iv"
            android:id="@+id/tv_content"
            android:text="这是内容"
            android:textSize="@dimen/sp_14"
            android:textIsSelectable="true"
            android:textColorLink="@color/blue"
            android:textColor="@color/home_zx_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/white"
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/global_activity_bg_color" />

        <RelativeLayout
            android:id="@+id/fb_rlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/fabu_time"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/global_txt_black9"
                android:text="发表于："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/jubao"
                android:textSize="6sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/jubao"
                android:text="举报"
                android:gravity="center"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/me_bg_color" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/comment_num_rlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:text="评论数 4"
                android:textColor="@color/home_zx_text"
                android:id="@+id/comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/me_bg_color" />
        </RelativeLayout>




</LinearLayout>