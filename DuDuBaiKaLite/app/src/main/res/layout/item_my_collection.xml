<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@color/global_bg_white">


    <ImageView
        android:id="@+id/iv_collection_icon"
        android:layout_width="100dp"
        android:layout_height="67dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_15"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_collection_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toLeftOf="@id/iv_collection_icon"
        android:textColor="@color/global_txt_black4"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/global_line_bg" />

    <View
        android:id="@+id/view_collection_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/global_line_bg" />


</RelativeLayout>