<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="200dp">

<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:background="#536381"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        >
        <RelativeLayout
            android:id="@+id/rl_hight"
            android:layout_width="wrap_content"
            android:layout_height="30dp">


            <ImageView
                android:id="@+id/line1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:src="@drawable/one_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/current_month"
                android:layout_marginLeft="7dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:layout_toRightOf="@id/line1"
                android:layout_centerVertical="true"
                android:src="@drawable/one_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/vir_line"
               android:background="@drawable/line_virture"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="1px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_product_layout"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/rl_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:layout_centerInParent="true"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/product_logo"
                   android:layout_marginTop="2dp"
                   android:layout_width="@dimen/dp_20"
                   android:layout_height="@dimen/dp_20" />
               <TextView
                   android:layout_marginLeft="@dimen/dp_4"
                   android:id="@+id/money_app_name"
                   android:textSize="@dimen/sp_16"
                   android:textColor="@color/home_banner_p_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_below="@id/rl_product_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ed_money_value1"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_toRightOf="@id/ed_money_value1"
                        android:id="@+id/ed_money_value2"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_toRightOf="@id/ed_money_value2"
                        android:id="@+id/ed_money_value3"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_toRightOf="@id/ed_money_value3"
                        android:id="@+id/ed_money_value4"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_below="@id/ed_money_value3"
                        android:layout_marginTop="6dp"
                        android:id="@+id/ed"
                        android:textSize="10sp"
                        android:textColor="@color/home_banner_p_desc"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/yll_value1"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_toRightOf="@id/yll_value1"
                        android:id="@+id/yll_value2"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_below="@id/yll_value2"
                        android:layout_marginTop="6dp"
                        android:id="@+id/yll"
                        android:textSize="10sp"
                        android:textColor="@color/home_banner_p_desc"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/qx_time_value1"
                            android:textSize="@dimen/sp_18"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_toRightOf="@id/qx_time_value1"
                            android:id="@+id/qx_time_value2"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_toRightOf="@id/qx_time_value2"
                            android:id="@+id/qx_time_value3"
                            android:textSize="@dimen/sp_18"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_toRightOf="@id/qx_time_value3"
                            android:id="@+id/qx_time_value4"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/qx_time_value3"
                            android:layout_marginTop="6dp"
                            android:id="@+id/qx"
                            android:textSize="10sp"
                            android:textColor="@color/home_banner_p_desc"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/cuurent_money_last"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_centerHorizontal="true"
        android:id="@+id/get_money"
        android:background="@drawable/home_get_money"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="110dp"
        android:layout_height="34dp" />

</RelativeLayout>


</LinearLayout>