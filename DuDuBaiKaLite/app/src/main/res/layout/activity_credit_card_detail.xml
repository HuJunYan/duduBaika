<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:background="@color/white"
        android:id="@+id/tb_crad_detail"
        style="@style/AppTheme.Toolbar"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <ImageView
                android:id="@+id/iv_regist_return"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/login_return1"
                tools:ignore="ContentDescription" />


            <TextView
                android:text="信用卡详情"
                android:id="@+id/tv_home_title"
                style="@style/ActivityTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/global_txt_black5" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/red_home"
                android:layout_centerVertical="true"
                android:id="@+id/tv_share"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:text="分享"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:background="@color/main_item_bottom_line_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

<RelativeLayout
    android:layout_marginTop="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/card_logo"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />

    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/home_zx_text"
        android:text="交通银行信用卡"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/card_logo"
        android:id="@+id/credit_card_bank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="@color/global_edit"
        android:text="交通银行信用卡"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/credit_card_bank_title"
        android:id="@+id/credit_card_bank_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/product_detail_bg"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/car_vip_title"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/me_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:lineSpacingExtra="2dp"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:id="@+id/sqtj_value"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/global_txt_black5"
                    android:layout_below="@id/car_vip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/line"
                    android:background="@color/main_item_bottom_line_color"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_below="@id/sqtj_value"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>

                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/card_sqtj"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_below="@id/line"
                    android:textSize="@dimen/sp_16"
                    android:text=""
                    android:textColor="@color/me_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=""
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_below="@id/card_sqtj"
                    android:id="@+id/card_sqtj_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </ScrollView>

        <TextView
            android:background="@drawable/now_sq"
            android:id="@+id/now_pay"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/dp_45" />
    </LinearLayout>



</LinearLayout>
