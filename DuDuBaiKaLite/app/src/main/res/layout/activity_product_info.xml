<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:background="@color/white"
        android:id="@+id/tb_product_info"
        style="@style/AppTheme.Toolbar"
       >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <ImageView
                android:id="@+id/iv_regist_return"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/login_return1"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/tv_home_title"
                style="@style/ActivityTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/global_txt_black5" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/red_home"
                android:layout_centerVertical="true"
                android:id="@+id/tv_share"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:text="分享"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/info_title_below_bg">



       <LinearLayout
           android:id="@+id/ll_p_name"
           android:layout_centerHorizontal="true"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/app_logo"
               android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_25" />

           <TextView
               android:layout_marginLeft="@dimen/dp_10"
               android:textSize="@dimen/sp_16"
               android:textColor="@color/white"
               android:id="@+id/p_name"
               android:layout_gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </LinearLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_p_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:id="@+id/ed_fw"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:layout_below="@id/ed_fw"
            android:textColor="@color/white"
            android:id="@+id/have_fk"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/white_line"
            android:layout_below="@id/have_fk"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>


        <LinearLayout
            android:layout_below="@id/white_line"
            android:id="@+id/ll_desc"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/info_yll_value"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/info_yll_key"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/info_yll_value"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                
                <View
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="1px"
                    android:background="@color/white"
                    android:layout_height="@dimen/dp_20"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/info_qx_value"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/info_qx_key"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/info_qx_value"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="1px"
                    android:background="@color/white"
                    android:layout_height="@dimen/dp_20"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/info_xk_value"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/info_xk_key"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/info_xk_value"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/product_detail_bg"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sqtj"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="14dp"
            android:textSize="@dimen/sp_16"

            android:textColor="@color/me_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:lineSpacingExtra="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_25"
            android:id="@+id/sqtj_value"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/global_txt_black5"
            android:layout_below="@id/sqtj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rzzl_title"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="14dp"
            android:layout_below="@id/sqtj_value"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/me_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_below="@id/rzzl_title"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>
        <TextView
            android:id="@+id/hkfs"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="18dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/me_text_color"
            android:layout_below="@id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/hk_way_value"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="18dp"
            android:layout_below="@id/hkfs"
            android:paddingBottom="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/global_txt_black5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            </RelativeLayout>
      </ScrollView>

            <TextView
                android:background="@drawable/now_sq"
                android:id="@+id/now_pay"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/dp_45" />
  </LinearLayout>



</LinearLayout>
