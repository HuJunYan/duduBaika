<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bg_color"
    tools:context=".ui.activity.ReporTalkActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_title"
        style="@style/AppTheme.Toolbar"
        android:background="@color/global_bg_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/login_return1"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/tv_title"
                style="@style/ActivityTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="举报"
                android:textColor="@color/global_txt_black5" />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tb_lgoin"
        android:background="@color/global_activity_bg_color" />

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_15"
    android:textSize="@dimen/sp_14"
    android:text=""
    android:textColor="@color/home_zx_text"
    android:id="@+id/reported_person"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text=""
        android:textColor="@color/home_zx_text"
        android:id="@+id/reported_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/me_bg_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/report_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/tv_jubao"
        android:gravity="center_horizontal"
        android:background="@drawable/now_sq"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_40"
        android:text="举报"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>