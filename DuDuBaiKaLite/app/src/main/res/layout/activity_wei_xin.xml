<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_activity_bg_color"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_weixin"
        style="@style/AppTheme.Toolbar"
        android:background="@color/global_bg_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <ImageView
                android:id="@+id/weixin_return"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:scaleType="center"
                android:src="@drawable/login_return1"
                tools:ignore="ContentDescription" />

            <TextView
                android:textColor="@color/global_txt_black5"
                android:id="@+id/tv_title"
                style="@style/ActivityTitleTheme"
                android:text="微信公众号" />
            <View
                android:background="@color/main_bottom_line_color"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_marginTop="34dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/circle_logo"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/sp_14"
                        android:src="@drawable/app_name"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="@color/white"
                    android:src="@drawable/wx_code"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/blue_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/weixin_desc"
                    android:textColor="@color/global_txt_black5"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/way1"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="@string/weixin_way_one"
                    android:layout_marginLeft="38dp"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginRight="38dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/login_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/way2"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="@string/weixin_way_two"
                    android:layout_marginLeft="38dp"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginRight="38dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/login_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_50">

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:id="@+id/copy"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/copy_weixin_bg"
                        android:gravity="center"
                        android:text="复制微信号"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/go_weixin"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="17dp"
                        android:layout_toLeftOf="@id/copy"
                        android:background="@drawable/gz_weixin_bg"
                        android:gravity="center"
                        android:text="去关注"
                        android:textColor="@color/white"
                        android:textSize="15sp" />


                </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>