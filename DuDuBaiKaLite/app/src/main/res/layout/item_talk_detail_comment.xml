<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/item_iv"
            android:layout_centerVertical="true"
            android:src="@drawable/money_da"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/item_iv"
            android:text="1777777"
            android:textColor="@color/global_txt_black5"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/comment_time"
            android:textSize="11sp"
            android:text="2018-02-12"
            android:textColor="@color/global_txt_black9"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_toRightOf="@id/item_iv"
        android:layout_marginBottom="@dimen/dp_8"
        android:id="@+id/comment_content"
        android:text="这是评论"
        android:textIsSelectable="true"
        android:lineSpacingExtra="3dp"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/home_zx_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="13dp"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/me_bg_color"
        />



</LinearLayout>