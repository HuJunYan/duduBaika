<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="140dp">

    <LinearLayout
        android:background="@drawable/shape_item_dialog_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_assess_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="添加下款口子"
            android:textColor="@color/global_txt_black5"
            android:textSize="@dimen/sp_14"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:background="@drawable/shape_add_product"
                android:id="@+id/p_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:textColorHint="@color/edit_text_hint_color"
                android:hint="自定义名称，不超过5个字"
                android:maxLength="5"
                android:textColor="@color/global_txt_gray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/main_item_bottom_line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/dialog_cancle"
                android:text="取消"
                android:textColor="@color/global_txt_black5"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"

                android:textSize="14sp" />

            <TextView
                android:gravity="center"

                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="30dp"
                android:id="@+id/dialog_confirm"
                android:text="确认"
                android:textColor="@color/red_home"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:background="@color/main_item_bottom_line_color"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
