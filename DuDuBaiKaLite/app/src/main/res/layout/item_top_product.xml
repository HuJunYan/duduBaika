<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/global_line_bg" />

        <ImageView
            android:id="@+id/iv_item_top_product_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_top_product_item_now_apply"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_item_top_product_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_top_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/global_txt_black4"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_top_product_quota_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/home_item_button_color" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_top_product_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/global_txt_black2"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_success_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_top_product_item_loan_time_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限:"
                android:textColor="@color/edit_text_hint_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_top_product_item_loan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/edit_text_hint_color"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_product_item_loan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已申请成功:"
                    android:textColor="@color/edit_text_hint_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_top_product_item_apply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/global_txt_black4"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/edit_text_hint_color"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_top_product_item_now_apply"
            android:layout_width="69dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_item_success_number"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_item_red2"
            android:gravity="center"
            android:text="立即申请"
            android:textColor="@color/global_bg_white"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>